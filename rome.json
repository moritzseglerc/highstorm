{
  "$schema": "./node_modules/rome/configuration_schema.json",

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": off,
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "on"
      },
      "style": {
        "useBlockStatements": "error"
      }
    },
    "ignore": ["node_modules", ".next", "dist"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentSize": 3,
    "enabled": true,
    "lineWidth": 100,
    "ignore": ["node_modules", ".next", "dist"]
  }
}
